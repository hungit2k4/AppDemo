<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backround_linear"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/label_name_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/name_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nguyễn văn a"
        android:layout_toEndOf="@id/label_name_account"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/label_user_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User: "
        android:layout_below="@+id/label_name_account"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/user_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="admin"
        android:layout_toEndOf="@id/label_user_account"
        android:layout_below="@+id/name_account"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/label_pass_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass: "
        android:layout_below="@+id/label_user_account"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/pass_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin123"
        android:layout_toEndOf="@id/label_user_account"
        android:layout_below="@+id/user_account"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        />

    <ImageButton
        android:id="@+id/ibtnEdit_account"
        style="?attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_mode_edit_24"
        android:layout_toStartOf="@+id/ibtnDelete_account"
        android:layout_below="@+id/user_account"
        />

    <ImageButton
        android:id="@+id/ibtnDelete_account"
        style="?attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_delete_24"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/user_account"
        />


</RelativeLayout>