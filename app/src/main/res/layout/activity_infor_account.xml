<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManHinh.Infor_account"
    android:padding="10dp"
    android:orientation="vertical"
   android:gravity="center_horizontal"
    android:background="#DAD9D9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnBack"
            android:background="@drawable/khung_tron"
            android:backgroundTint="#E8C250"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin tài khoản    "
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_account_80"
        android:layout_margin="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anh"
                android:textSize="18dp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chị"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/edtNameAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung_cn"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Nguyễn Văn Hùng"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/edtSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung_cn"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="0394856487"
            android:textColor="#737373"
            android:enabled="false"
            android:backgroundTint="#D5D2D2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/edtEmailAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/khung_cn"
            android:layout_marginTop="10dp"
            android:padding="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnEditInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa"
        android:backgroundTint="#00BCD4"
        app:cornerRadius="10dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btnHuyAcc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HỦY"
            android:layout_marginRight="10dp"
            android:backgroundTint="#9A9999"/>
        <Button
            android:id="@+id/btnLuuAcc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LƯU LẠI"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#ECCE86"
            android:textColor="#737373"/>
    </LinearLayout>
</LinearLayout>